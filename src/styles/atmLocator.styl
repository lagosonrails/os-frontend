.parent-container {
  margin-right: auto;
  margin-left: auto;
}

.atm-locator {
  width: 100%;
  height: 100vh;
  position: relative;

  .intro {
    text-align: center;
    background-color: #F3F6FF;
    padding: 20px;
    margin: 0;
  }

  .loader {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%)
    width: 70px;
    height: 70px;
  }
}
